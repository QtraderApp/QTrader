{
  "$id": "com.qtrader.events.envelope.v1",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Event Envelope v1",
  "type": "object",
  "required": [
    "event_id",
    "event_type",
    "event_version",
    "occurred_at",
    "payload"
  ],
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid"
    },
    "event_type": {
      "type": "string",
      "minLength": 1
    },
    "event_version": {
      "type": "integer",
      "minimum": 1
    },
    "occurred_at": {
      "type": "string",
      "format": "date-time"
    },
    "correlation_id": {
      "type": "string",
      "format": "uuid"
    },
    "causation_id": {
      "type": "string",
      "format": "uuid"
    },
    "source_service": {
      "type": "string",
      "minLength": 1
    },
    "payload": {
      "type": "object"
    }
  },
  "additionalProperties": false
}
